# Example configuration for local development
# Copy this file to config.env and fill in your actual values

local=true
bot_token=YOUR_TELEGRAM_BOT_TOKEN_HERE
webhook_url=YOUR_NGROK_OR_LOCAL_WEBHOOK_URL
types_data_json=types_data.json
reminders_json=reminders.json
google_sheet_id=YOUR_GOOGLE_SHEET_ID_HERE
gcp_project_id=YOUR_GCP_PROJECT_ID
gcp_secret_id=YOUR_SECRET_MANAGER_SECRET_ID
scheduler_token=YOUR_SCHEDULER_TOKEN_HERE
sheets_creds={"web":{"client_id":"YOUR_CLIENT_ID","project_id":"YOUR_PROJECT_ID","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_secret":"YOUR_CLIENT_SECRET","redirect_uris":["http://localhost"]}}

# User Configuration (comma-separated values)
ALLOWED_USER_IDS=123456789,987654321
